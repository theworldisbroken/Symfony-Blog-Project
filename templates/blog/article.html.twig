<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Welcome!
		{% endblock %}
	</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	{% block importmap %}
		{{ importmap('app') }}
	{% endblock %}
</head>
<body>
	{% block body %}
		{% if username %}
			{% include 'navbar.html.twig' with {active: 'signedin'} %}
		{% else %}
			{% include 'navbar.html.twig' %}
		{% endif %}
		<a href="{{ path('home')}}" class="btn btn-primary">Back</a>
		<div class="card">
			<div class="card-header">
				<h4>{{article.title}}
				</h4>
				{% if username %}
					<a href="{{ path('article_delete', {id: article.id})}}" id="btn-delete" class="btn btn-primary">Delete</a>
				{% endif %}
			</div>
			<div class="card-body">
				<p class="card-text">
					{{article.body}}</p>
			</div>
		</div>
	{% endblock %}
</body>
