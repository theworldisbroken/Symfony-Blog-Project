<head>
	<meta charset="UTF-8">
	<title>
		{% block title %}Welcome!
		{% endblock %}
	</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	{% block importmap %}
		{{ importmap('app') }}
	{% endblock %}
</head>
<body>
	{% if username %}
		{% include 'navbar.html.twig' with {active: 'signedin'} %}
	{% else %}
		{% include 'navbar.html.twig' %}
	{% endif %}
	{% block body %}
    <div class="body-div">
		<div class="welcome-profile-div">
			<h1 class="welcome-msg-proflie">Welcome
				{{ username }}</h1>
			<a class="btn btn-primary create-btn" href="{{path('create_GET')}}">
				Create Article
			</a>
		</div>
		{% if articles is defined %}
			<label class="my-posts-label">My Posts</label>
			{% for article in articles %}
				<a href="{{ path('article', {id: article.id})}}" class="card-link">
					<div class="card">
						<div class="card-header">
							<h4>{{article.title}}
							</h4>
						</div>
						<div class="card-body">
							<p class="card-text">
								{{article.body}}</p>
						</div>
					</div>
				</a>
			{% endfor %}
		{% endif %}
	{% endblock %}
    </div>
</body>
